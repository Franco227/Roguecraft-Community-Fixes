$item replace entity @s armor.feet with minecraft:chainmail_boots{Unbreakable:true,Enchantments:[{id:"minecraft:protection",lvl:$(protection)},{id:"minecraft:thorns",lvl:$(thorns)},{id:"minecraft:feather_falling",lvl:$(feather_falling)}]}
$item replace entity @s armor.legs with minecraft:chainmail_leggings{Unbreakable:true,Enchantments:[{id:"minecraft:protection",lvl:$(protection)},{id:"minecraft:thorns",lvl:$(thorns)},{id:"minecraft:swift_sneak",lvl:$(swift_sneak)}]}
$item replace entity @s armor.chest with minecraft:chainmail_chestplate{Unbreakable:true,Enchantments:[{id:"minecraft:protection",lvl:$(protection)},{id:"minecraft:thorns",lvl:$(thorns)}]}
$item replace entity @s armor.head with minecraft:chainmail_helmet{Unbreakable:true,Enchantments:[{id:"minecraft:protection",lvl:$(protection)},{id:"minecraft:thorns",lvl:$(thorns)},{id:"minecraft:aqua_affinity",lvl:$(aqua_affinity)},{id:"minecraft:respiration",lvl:$(respiration)}]}